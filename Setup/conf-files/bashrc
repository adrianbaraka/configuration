if [ -f "$HOME"/.bash_aliases ]; then
    # shellcheck disable=SC1091
    . "$HOME"/.bash_aliases2
fi

# Source .bashfunctions file
if [ -f ~/.bash_functions ]; then
    # shellcheck disable=SC1090
    . ~/.bash_functions
fi

#ensure history is appended and written to file immediately
shopt -s histappend

