# Function to change directory and list contents
cdl() {
    if [ $# -eq 0 ]; then
        echo "Usage: cdl <directory>"
        return 1
    fi

    cd "$1" || return 1
    ls
}

ssh-termux() {
	# Prompt the user for an IP address
	echo -n "Enter the IP address: "
	read ip_address

	# Execute the SSH command with the provided IP
	ssh -p 8022 u0_a225@$ip_address
}


ssh-github(){
    eval "$(ssh-agent -s)"
    ssh-add ~/.ssh/github_id_ed25519
}


#Update and upgrade packages
update(){
    sudo apt update
    sudo apt upgrade
}
